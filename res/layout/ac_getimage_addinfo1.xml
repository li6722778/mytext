<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/contentbg"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="管理公司" />

                    <EditText
                        android:id="@+id/id_getimage_compname"
                        style="@style/getimageEditText"
                        android:layout_weight="3.3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="联系人" />

                    <EditText
                        android:id="@+id/id_getimage_contactmen"
                        style="@style/getimageEditText"
                        android:layout_weight="3.3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="联系电话" />

                    <EditText
                        android:id="@+id/id_getimage_tele"
                        style="@style/getimageEditText"
                        android:layout_weight="3.3"
                        android:numeric="decimal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="门店名称" />

                    <EditText
                        android:id="@+id/id_getimage_parkname"
                        style="@style/getimageEditText"
                        android:layout_weight="3.3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="门店地址" />
                    
                    <EditText 
                        android:id="@+id/id_getimage_city"
                        style="@style/getimageEditText"
                        android:layout_weight="1"
                        android:text=""
                        />

                    <EditText
                        android:id="@+id/id_getimage_parkaddress"
                        style="@style/getimageEditText"
                        android:layout_weight="2.1"
                        android:drawableLeft="@drawable/icon_sat" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="门店类别" />

                    <EditText
                       
                        style="@style/getimageEditText"
                        android:layout_weight="3.3" />
                </LinearLayout>
                
                
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                     >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="法人代表" />

                    <EditText
                       
                        style="@style/getimageEditText"
                        android:layout_weight="3.3" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="管理公司" />

                    <EditText
                       
                        style="@style/getimageEditText"
                        android:layout_weight="3.3" />
                </LinearLayout>
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >
           
                     <RadioButton
               android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="是否配送"
                        android:textSize="11sp" />
                </LinearLayout>
                
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/contentbg"
                android:visibility="gone"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/payradioButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="  分段时间"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/spinner_new"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal" >

                      <Spinner
                            android:id="@+id/spinner1"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1.2"
                            android:entries="@array/degrees"
                            android:gravity="center"
                            android:spinnerMode="dropdown"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="center" >

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/timebim" />

                            <TextView
                                android:id="@+id/pay_mode1_intime"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="3dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="3dp"
                                android:layout_weight="1.2"
                                android:background="@drawable/pay_shap"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text="小时以内"
                                android:textColor="@color/black"
                                android:textSize="11dp" />
                        </LinearLayout>

                    <EditText
                        android:id="@+id/id_getimage_parktime"
                        style="@style/getimage_time_EditText"
                        android:layout_weight="1.3"
                        android:numeric="decimal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="元/小时" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="left"
                        android:text="超出时间     "
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/id_getimage_parkovertime"
                        style="@style/getimage_time_EditText"
                        android:layout_weight="1.3"
                        android:numeric="integer" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="元/小时" />
                </LinearLayout>

                
                 <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:text="订单成功后"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <EditText
                            android:id="@+id/feeTypeSecMinuteOfActivite"
                            style="@style/getimage_time_EditText"
                            android:layout_weight="0.6"
                            android:numeric="integer"
                            android:text="" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1.7"
                            android:gravity="center_vertical"
                            android:text="分钟后开始计费" />
                    </LinearLayout>
                
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/payradioButton2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:checked="false"
                        android:text="  计次收费"
                        android:textSize="11sp" />

                    <EditText
                        android:id="@+id/id_getimage_paynomal"
                        style="@style/getimage_time_EditText"
                        android:layout_weight="1.3"
                        android:numeric="decimal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="元/次" />
                </LinearLayout>
                
                
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:text="订单成功后"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <EditText
                            android:id="@+id/feeTypeFixedMinuteOfInActivite"
                            style="@style/getimage_time_EditText"
                            android:layout_weight="0.6"
                            android:numeric="integer"
                            android:text="" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1.7"
                            android:gravity="center_vertical"
                            android:text="分钟后过期" />
                    </LinearLayout>
                

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/DaypayradioButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="  全天优惠"
                        android:textSize="11sp" />

                    <EditText
                        android:id="@+id/id_getimage_daypay"
                        style="@style/getimage_time_EditText"
                        android:layout_weight="1.3"
                        android:numeric="decimal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="元/小时" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/DaytimeradioButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="  优惠时段"
                        android:textSize="11sp" />

                    <EditText
                        android:id="@+id/id_getimage_daytimepay"
                        style="@style/getimage_time_EditText"
                        android:layout_weight="1.3"
                        android:numeric="decimal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="元/小时" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/id_getimage_startime"
                        style="@style/getimage_time_EditText"
                        android:layout_weight="1.2"
                        android:drawableLeft="@drawable/timebim"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="—" />

                    <TextView
                        android:id="@+id/id_getimage_endtime"
                        style="@style/getimage_time_EditText"
                        android:layout_weight="1.2"
                        android:drawableLeft="@drawable/timebim"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/next_line"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="8sp"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:background="@drawable/contentbg"
                 >

                <Button
                    android:id="@+id/add_parkinfo_nextbtn"
                    style="@style/accountButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_margin="3dp"
                    android:background="@drawable/btn_add_accounts"
                    android:gravity="center"
                    android:text="下一步" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>